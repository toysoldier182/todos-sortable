<div class="container mt-4">
  <div class="row">
    <div class="col-xs-10 col-sm-4 col-lg-4">
      <h2 class="mt-4">Create a new Todo</h2>
      <%= render "new"  %>
    </div>

    <div class="col-xs-10 col-sm-6 col-lg-8">
      <h1 class="mt-4">My Todo's</h1>

      <ul class="list-group">
        <% @todos.each do |todo| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= todo.name %>
            <span class="badge badge-primary badge-pill"><%= todo.due_date %></span>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


